{
  "name": "@digitalculture/ochre-sdk",
  "version": "0.15.0",
  "type": "module",
  "license": "MIT",
  "description": "Node.js library for working with OCHRE (Online Cultural and Historical Research Environment) data",
  "author": "Firat Ciftci <firatciftci@uchicago.edu> (https://digitalculture.uchicago.edu)",
  "homepage": "https://github.com/uchicago-digitalculture-webdev/ochre-sdk",
  "bugs": {
    "url": "https://github.com/uchicago-digitalculture-webdev/ochre-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uchicago-digitalculture-webdev/ochre-sdk.git"
  },
  "keywords": [
    "ochre",
    "uchicago",
    "digital-culture",
    "digital-humanities",
    "typescript",
    "sdk",
    "parser",
    "cultural-heritage",
    "research"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown src/index.ts --watch",
    "build": "tsdown",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write --list-different .",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "release": "bumpp"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@types/node": "^24.10.4",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "terser": "^5.44.1",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.27.0"
}
