{
  "name": "ochre-sdk",
  "version": "0.8.12",
  "type": "module",
  "license": "MIT",
  "description": "Node.js library for working with OCHRE (Online Cultural and Historical Research Environment) data",
  "author": "Firat Ciftci <firatciftci@uchicago.edu> (https://digitalculture.uchicago.edu)",
  "homepage": "https://github.com/uchicago-digitalculture-webdev/ochre-sdk",
  "bugs": {
    "url": "https://github.com/uchicago-digitalculture-webdev/ochre-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uchicago-digitalculture-webdev/ochre-sdk.git"
  },
  "keywords": [
    "ochre",
    "uchicago",
    "digital-culture",
    "digital-humanities",
    "typescript",
    "sdk",
    "parser",
    "cultural-heritage",
    "research"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsdown src/index.ts --watch",
    "build": "tsdown",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write --list-different .",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "prepare": "simple-git-hooks",
    "release": "bumpp && pnpm publish"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "date-fns": "^4.1.0",
    "fast-equals": "^5.2.2",
    "fast-xml-parser": "^5.2.5",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.1",
    "@types/node": "^24.0.4",
    "bumpp": "^10.2.0",
    "eslint": "^9.29.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.1",
    "simple-git-hooks": "^2.13.0",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.4",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "pnpm run lint:fix",
      "pnpm run format:fix",
      "pnpm run check-types",
      "pnpm run test"
    ]
  }
}
